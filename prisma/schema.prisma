generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id                  String  @id @default(uuid())
  firstName           String
  lastName            String
  applicationReceived Boolean
  depositPaid         Boolean
  topLocker           Boolean

  classes         Class[]
  membership      Membership?       @relation(fields: [membershipId], references: [id])
  membershipId    String?
  StudentToLocker StudentToLocker[]
  StudentToLock   StudentToLock[]
}

model Class {
  id     String  @id @default(uuid())
  grade  Int
  letter String? @db.Char(1)
  year   Int

  Student   Student? @relation(fields: [studentId], references: [id])
  studentId String?
}

enum MembershipStatus {
  VERIFIED
  UNPAID
}

model Membership {
  id      String           @id @default(uuid())
  name    String
  email   String
  status  MembershipStatus
  comment String
  Student Student[]
}

enum Status {
  READY
  STICKY
  BROKEN
}

model StudentToLocker {
  year Int

  student      Student @relation(fields: [studentId], references: [id])
  studentId    String
  locker       Locker  @relation(fields: [lockerNumber], references: [number])
  lockerNumber Int

  @@id([year, studentId, lockerNumber])
}

model Locker {
  number          Int               @id
  floor           Int
  status          Status
  comment         String
  StudentToLocker StudentToLocker[]
}

model StudentToLock {
  year Int

  student    Student @relation(fields: [studentId], references: [id])
  studentId  String
  lock       Lock    @relation(fields: [lockSerial], references: [serial])
  lockSerial Int

  @@id([year, studentId, lockSerial])
}

model Lock {
  serial        Int             @id
  combination1  Int
  combination2  Int
  combination3  Int
  status        Status
  comment       String
  StudentToLock StudentToLock[]
}
